<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="68dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
        android:minHeight="68dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/multiline_switch_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView android:id="@+id/multiline_switch_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:ellipsize="end"
                android:fadingEdge="horizontal"
                android:textSize="40px"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="25dp"/>
            <TextView android:id="@+id/multiline_switch_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="2"
                android:paddingLeft="25dp"
                android:textSize="30px"
                android:visibility="gone" />
        </LinearLayout>
        <TextView android:id="@+id/multiline_switch_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="25dp"
            android:textSize="30px"
            android:visibility="gone" />
    </RelativeLayout>
    <Switch android:id="@+id/multiline_switch_switcher"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30px"
        android:thumb="@drawable/btn_setting_switch_thumb"
        android:gravity="center_vertical|right"/>
</LinearLayout>